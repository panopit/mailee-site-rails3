                %a{:href => "#"} Help
              %li
                %a{:href => "#"} Melhores práticas
          .span4
            %h4 Entre em contato
            %ul
              %li
                %a{:href => "#"} Suporte
              %li
                %a{:href => "#"} Comercial
          .span4.last
            %h4 Receba nossa newsletter
            %form{:action => "#", :method => "POST"}
              %input.input-text{:name => "news[name]", :placeholder => "Nome", :type => "text"}
                %input.input-text{:name => "news[email]", :placeholder => "Email", :type => "text"}
                  %p ~1 email por mês
                  %input.btn.btn-success{:type => "submit", :value => "Cadastrar"}
          .clear
          .pull-right.clear{:style => 'margin-bottom: 18em;'}
